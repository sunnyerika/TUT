<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woodamax.stm32freshview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".RegisterScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ArticleScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginScreenAsync"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TutActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".TutStartScreen" />
        <activity android:name=".ShowSingleRecordActivity" />
        <activity android:name=".UpdateActivity" />
        <activity android:name=".ShowAllTutsActivity" />
        <activity
            android:name=".TUTconnSingleActivity"
            android:parentActivityName=".ArticleScreen" />
        <activity
            android:name=".TUTconnSingleEditActivity"
            android:parentActivityName=".ArticleScreen" />
        <activity
            android:name=".TUTconnSingleEditFieldsOnlyActivity"
            android:parentActivityName=".ArticleScreen" />
        <activity
            android:name=".TUTconnSingleCreateActivity"
            android:parentActivityName=".ArticleScreen" />
        <activity android:name=".TUTconnSingleTestBwActivity" />
        <activity android:name=".TUTconnFreshView" />
        <activity android:name=".TUTconnFreshViewEdit"></activity>
    </application>

</manifest>